        </div>
    </main>

    <script>
        function nextQuestion(questionNumber) {
            // Hide the current question
            document.getElementById('question' + (questionNumber - 1)).style.display = 'none';

            // Show the next question or the submit button if there are no more questions
            if (document.getElementById('question' + questionNumber)) {
                document.getElementById('question' + questionNumber).style.display = '';
            } else {
                document.getElementById('submitBtn').style.display = '';
            }
        }

        function prevQuestion(questionNumber) {
            // Hide the current question
            document.getElementById('question' + questionNumber).style.display = 'none';

            // Show the previous question
            if (document.getElementById('question' + (questionNumber - 1))) {
                document.getElementById('question' + (questionNumber - 1)).style.display = '';
                document.getElementById('nextBtn').style.display = ''; // Show the "Next" button
            }
            if (questionNumber == 1) {
                document.getElementById('prevBtn').style.display = 'none'; // Hide the "Previous" button for the first question
            }
        }

        function submitQuiz() {
            // Initialize the count of correct answers
            let correctAnswers = 0;

            // Get the selected answers
            const q1Answer = document.querySelector('input[name="q1"]:checked').value;
            const q2Answer = document.querySelector('input[name="q2"]:checked').value;
            const q3Answer = document.querySelector('input[name="q3"]:checked').value;
            const q4Answer = document.querySelector('input[name="q4"]:checked').value;
            const q5Answer = document.querySelector('input[name="q5"]:checked').value;
            const q6Answer = document.querySelector('input[name="q6"]:checked').value;
            const q7Answer = document.querySelector('input[name="q7"]:checked').value;
            const q8Answer = document.querySelector('input[name="q8"]:checked').value;
            const q9Answer = document.querySelector('input[name="q9"]:checked').value;
            const q10Answer = document.querySelector('input[name="q10"]:checked').value;
            // Check if the answers are correct
            if (q1Answer === 'c') {
                correctAnswers++;
            }
            if (q2Answer === 'b') {
                correctAnswers++;
            }
            if (q3Answer === 'a') {
                correctAnswers++;
            }
            if (q4Answer === 'b') {
                correctAnswers++;
            }
            if (q5Answer === 'd') {
                correctAnswers++;
            }
            if (q6Answer === 'a') {
                correctAnswers++;
            }
            if (q7Answer === 'b') {
                correctAnswers++;
            }
            if (q8Answer === 'd') {
                correctAnswers++;
            }
            if (q9Answer === 'b') {
                correctAnswers++;
            }
            if (q10Answer === 'c') {
                correctAnswers++;
            }

            // Display the number of correct answers out of 10
            alert('You got ' + correctAnswers + ' out of 10 questions right!');
        }

        function clickInput(li) {
            var input = li.querySelector('input');
            if (input) {
                input.click();
            }
        }
    </script>
</body>

