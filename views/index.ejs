<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <title>Skill Swap Network</title>
</head>
<body>
    <header>
        <h1>Skill Swap Network Home</h1>
    </header>
    <main>
        <button id="logout" onclick="window.location.href = '/login'">Logout</button>
        <h2>User Profiles</h2>
        <section id="user-profiles">
            <% users.forEach(user => { %>
                <div class="user-profile">
                    <a href="/profiles/<%= user.id %>" id="userName">
                        <h3 id="userName"><%= user.name %></h3>
                    </a>
                    <p>Skills: <%= user.skills.join(', ') %></p>
                    <p>Seeking Job in: <%= user.seeking.join(', ') %></p>
                </div>
                <% }); %>
            </section>
            
            <h2>Skills</h2>
            <section id="skill-listings">
                <% skillListings.forEach(skillListing => { %>
                    <div class="skill-listing">
                        <h3><%= skillListing.skill %></h3>
                        <p><%= skillListing.description %></p>
                </div>
                <% }); %>
        </section>
    </main>
    <button id="logout"><a href="/">Log Out</a></button>
    <footer>
        <p>&copy; Skill Swap Network</p>
    </footer>
</body>
</html>